{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./out",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["./src/main/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/main/**/*.ts",
    "src/main/**/*.d.ts",
    "src/preload/**/*.ts",
    "electron.vite.config.ts"
  ]
}
